<h2 class="ui center aligned medium icon header">
  <i class="circular blue users icon"></i>
  Type something....
</h2>
<div class="ui two column grid">
  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content" id="messages">
        <div class="ui feed" id= "message-container">
          <%= render @message %>
        </div>
      </div>
      <div class="extra content">
        <%= form_with(model: @Message, remote: true, html: {class: "ui reply form", role: "form"}) do |f|%>
          <div class="field ">
            <div class="ui fluid icon input">
              <%= f.text_field :body, placeholder: "Type a message...." %>
              <%=f.button '<i class="bordered inverted orange edit icon"></i>'. html_safe%>
            </div>
          </div>
        <%end%>
      </div>
    </div>
  </div>
  <div class="four wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui inverted vertical menu">
          <a class="item">
            Home
          </a>
          <a class="item">
            Messages
          </a>
          <a class="item active">
            Friends
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
