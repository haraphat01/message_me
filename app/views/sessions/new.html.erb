<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <div class="ui form">
        <%# <%= form_for(:session, html: {class: "ui form", role: "form"},local: true do |f|, url: login_path)%>
        <%= form_with(model: @users, local: true, html: {class: "ui form", role: "form"}) do |f|%>
        <div class="field">
          <%= f.label :username, "Username" %>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: "Username" %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password, placeholder: "Password" %>
          <div class="ui left icon input">
            <input type="password">
            <i class="lock icon"></i>
          </div>
        </div>
      </div>
      <%= f.button "Login", class: "ui blue orange submit button" %>
      <%end%>
  </div>
  <div class="middle aligned column">
    <div class="ui big button">
      <i class="signup icon"></i>
      Sign Up
    </div>
  </div>
</div>
<div class="ui vertical divider">
  Or
</div>
</div>
